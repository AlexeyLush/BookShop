@using Domain.Models
@model BookShop.ViewModels.Book.BookViewModel

@{
    ViewData["Title"] = "Добавить книгу";
    IList<Genre> genres = (IList<Genre>)ViewData["Genres"];
}

<h1>Добавить книгу</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div style="margin-top: 10px;" class="form-group">
                <label asp-for="Title" class="control-label"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div style="margin-top: 10px;" class="form-group">
                <label asp-for="Author" class="control-label"></label>
                <input asp-for="Author" class="form-control" />
                <span asp-validation-for="Author" class="text-danger"></span>
            </div>
            <div style="margin-top: 10px;" class="form-group">
                <label asp-for="Year" class="control-label"></label>
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger"></span>
            </div>
            <div style="margin-top: 10px;" class="form-group">
                <label asp-for="GenreId" class="control-label"></label>
                <select asp-for="GenreId" class="form-control">
                    @foreach (var item in genres)
                    {
                        <option value="@item.Id">@item.Title</option>
                    }
                </select>
                <span asp-validation-for="GenreId" class="text-danger"></span>
            </div>

            <div style="margin-top: 10px;" class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>

            <div style="margin-top: 10px;" class="form-group">
                <label asp-for="Photo" class="control-label"></label>
                <input asp-for="Photo" class="form-control-file" accept="image/*" />
                <span asp-validation-for="Photo" class="text-danger"></span>
            </div>
            <div style="margin-top: 10px;" class="form-group">
                <label asp-for="Description" for="descriptionArea" class="control-label"></label>
                <textarea asp-for="Description" id="descriptionArea" rows="6" cols="90" style="resize: none;"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div style="margin-top: 10px;" class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div style="margin-top: 10px;">
    <a asp-action="Index" asp-controller="Admin">Вернуться назад</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
